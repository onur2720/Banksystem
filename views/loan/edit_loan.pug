doctype html
html(lang='en')
  include ../common/navbar.pug
    +head("Edit loan")
  body
    header
      include ../common/navbar.pug
      +navbar()
      .container
        .row.align-items-center
          .col-md-6.order-md-1.text-center.text-md-left.pr-md-5
            h1 Edit loan
              form(action="/loan/" +loan.id + "/edit", method="POST")
                .input-group.mb-3
                  input(name="loan_password", type="password", placeholder="Skriv dit CPR nummer", value=loan.password)
                  .form-control
                    .input-groud-append
                     button(type="submit").btn.btn-primary Save
    include ../common/footer.pug
    +footer()
