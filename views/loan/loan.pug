doctype html
html(lang='en')
  include ../common/head.pug
  +head("Starter MVP")
  body
    header
      include ../common/navbar.pug
      +navbar()
      .container
        .row.align-items-center
          .col-md-6.order-md-1.text-center.text-md-left.pr-md-5
            h1 Loan
            table.table
              thead
                tr
                  th(scope="col") Din side
                  th(scope="col") Indstillinger
                  th(scope="col") Et eller andet
                tr
              tbody
                tr(id=loan.id)
                  td
                    span #{loan.password}
                  td
                    a(href="/loan/" + loan.id + "/edit") Detaljer
                  td
                    form(action="/loan" + loan.id + "/delete",
                    method="POST")
                      button(type="submit").btn.btn-primary Slet

    include ../common/footer.pug
    +footer()
    script(src='/javascript/loans.js')



