doctype html
html(lang='en')
  include ../common/head.pug
  +head("Starter MVP")
  body
    header
      include ../common/navbar.pug
      +navbar()
      .container
         .row.align-items-center
            .col-md-6.order-md-1.text-center.text-md-left.pr-md-5
              h1 Loans
              table.table
                thead
                  tr
                    th(scope="col") Din side
                    th(scope="col") Indstillinger
                    th(scope="col") Et eller andet
                  tr
                tbody
                  for loan in loans
                    tr(id=loan.id)
                      td
                        span #{loan.email}
                      td
                        a(href="/loan/" + loan.id) Detaljer
                      td
                        button(onclick=`deleteLoan('${loan.id}')`)
                        .btn.btn-primary Delete
    include ../common/footer.pug
    +footer()
    script(src='/javascript/loans.js')


