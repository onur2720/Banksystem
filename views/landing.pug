doctype html
html(lang='en')
  include common/head.pug
  +head("Starter MVP")
  body
    header
      include common/navbar.pug
      +navbar()
      .container
        .row.align-items-center
          .col-md-6.order-md-1.text-center.text-md-left.pr-md-5
            h1.mb-3 Tag dit nye lån her!
            p.loan Her hjælper vi dig med alle trin
            p.loan.mb-4 Bare følg med!
            form(action="/", method="POST")
              .input-group.mb-3
                input(name="loan_password", type="password", placeholder
                ="Skriv dit CPR nummer").form-control
                .input-group-append
                  button(type="submit").btn.btn-primary Ansøg nu!

            include common/footer.pug
            +footer()
            script(src='/javascript/loans.js')
